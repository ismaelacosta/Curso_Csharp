@model Shopping.Models.CreateProductViewModel

@{
    ViewData["Title"] = "Create";
    
}

<h1>Crear</h1>

<h4>Producto</h4>

<div class="container smfont">
    <form asp-action="Create" enctype="multipart/form-data" autocomplete="off" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);">
        <div class="box-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Categories" />
            <partial name="_CreateProduct" />
        </div>
        <div class="form-group">
            <input type="submit" value="Crear" class="btn btn-outline-primary" />
            <a asp-action="Index" class="btn btn-outline-success">Regresar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}